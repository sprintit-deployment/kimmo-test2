<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_module_package_form" model="ir.ui.view">
        <field name="name">ir.module.package.form.sprintit_module_management</field>
        <field name="model">ir.module.package</field>
        <field name="arch" type="xml">
            <form string="Module Package">
                    <header>
                        <button type="object" name="button_immediate_install" string="Install All" class="oe_highlight"/>
                        <button type="object" name="button_immediate_upgrade" string="Upgrade All" class="oe_highlight"/>
                        <button type="object" name="reset_apps_list" string="Reset Apps List"/>
                        <button type="object" name="hard_reset_apps_list" string="Hard Reset Apps List" groups="base.group_no_one"/>
                    </header>
                    <sheet>
                        <div class="oe_left" style="width: 500px;">
                            <h1><field name="name"/></h1>
                        </div>
                        <notebook>
                            <page string="Modules">
                                <field name="module_ids"
                                    options="{'no_create': True}"
                                    context="{'no_redirect': True, 'tree_view_ref': 'sprintit_module_management.module_module_package_tree_view'}"/>
                            </page>
                            <page string="Dependency Graph" groups="base.group_no_one">
                                <field name="dependency_graph"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
        </field>
    </record>

    <record id="view_module_package_tree" model="ir.ui.view">
        <field name="name">module_package_tree</field>
        <field name="model">ir.module.package</field>
        <field name="arch" type="xml">
            <tree string="Module Packages">
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="view_module_package_filter" model="ir.ui.view">
        <field name="name">ir.module.package.select</field>
        <field name="model">ir.module.package</field>
        <field name="arch" type="xml">
            <search string="Search Packages">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_view_module_package" model="ir.actions.act_window">
        <field name="name">Module Packages</field>
        <field name="res_model">ir.module.package</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'no_redirect': True}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            You dont have any Module Packages
            </p>
        </field>
    </record>

    <menuitem
            name="Module Packages"
            action="action_view_module_package"
            id="menu_view_module_package"
            parent="base.menu_management"
            sequence="50"/>

</odoo>
