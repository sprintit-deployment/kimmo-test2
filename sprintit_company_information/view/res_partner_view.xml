<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add fields to partner form  -->
        <record id="view_partner_form_company_information" model="ir.ui.view">
            <field name="name">res.partner.form.company.information</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="before">
                    <field name="einvoice_address"/>
                    <label for="einvoice_operator"/>
                    <div>
                        <field name="einvoice_operator" class="oe_inline"/>
                        <span attrs="{'invisible': [('einvoice_operator_identifier','=', False)]}"> (<field name="einvoice_operator_identifier" class="oe_inline"/>) </span>
                    </div>
                    <field name="company_registry" attrs="{'readonly': [('parent_id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form/sheet/group/group/div" position="after">
                    <field name="einvoice_address"/>
                    <label for="einvoice_operator"/>
                    <div>
                        <field name="einvoice_operator" class="oe_inline"/>
                        <span attrs="{'invisible': [('einvoice_operator_identifier','=', False)]}"> (<field name="einvoice_operator_identifier" class="oe_inline"/>) </span>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Add eInvoicing related fields to company -->
        <record id="view_company_form_company_information" model="ir.ui.view">
            <field name="name">res.company.form.company.information</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_registry']" position="after">
                    <field name="einvoice_address"/>
                    <label for="einvoice_operator"/>
                    <div>
                        <field name="einvoice_operator" class="oe_inline"/>
                        <span attrs="{'invisible': [('einvoice_operator_identifier','=', False)]}"> (<field name="einvoice_operator_identifier" class="oe_inline"/>) </span>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

